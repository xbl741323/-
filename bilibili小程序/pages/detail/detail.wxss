.video_other {
}

.video_other .video_item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.video_other .video_item .left {
  flex: 2;
  padding: 20rpx;
}

.video_other .video_item .left image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
}

.video_other .video_item .right {
  flex: 3;
  padding: 20rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
}

.video_other .video_item .right .right_title {
  color: #de688b;
}

.video_other .video_item .right .right_desc {
  display: flex;
  margin-top: 10rpx;
}

.video_other .video_item .right .right_desc view {
  margin-right: 15rpx;
}
