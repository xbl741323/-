.video_info {
}

.video_info video {
  width: 100%;
  display: block;
  margin: 30rpx auto;
  margin-bottom: 10rpx;
}

.video_info .video_intro {
  display: flex;
  font-size: 28rpx;
  justify-content: space-around;
  align-items: center;
  box-shadow: 5rpx 5rpx 5rpx rgba(197, 192, 192, 0.425);
}

.video_info .video_intro .intro_desc {
  padding: 20rpx;
  border-bottom: 5rpx solid #de688b;
  color: #de688b;
}

.video_info .video_intro .intro_comment {
}

.video_info .video_intro .intro_barrage {
  padding: 10rpx 40rpx;
  background-color: rgb(231, 228, 228);
  border-radius: 40rpx;
  font-size: 26rpx;
}

.video_auther {
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-top: 15rpx;
}

.video_auther .left {
  display: flex;
  align-items: center;
  justify-content: center;
}

.video_auther .left .img {
  margin-right: 20rpx;
}

.video_auther .left .img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.video_auther .left .desc {
  display: flex;
  flex-direction: column;
}

.video_auther .left .desc .name {
  color: #000;
}

.video_auther .left .desc .fans_count {
  color: rgb(148, 148, 148);
}

.video_auther .right {
  padding: 12rpx 40rpx;
  background-color: #de688b;
  color: #fff;
}

.video_info .video_title {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #000;
  padding: 10rpx;
}

.video_info .video_detail {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx;
}

.video_info .video_detail view {
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #666;
  margin-top: 10rpx;
}

.video_info .video_detail .video_detail_author {
  color: #000;
}

.video_info .video_detail .video_detail_playcount {
}

.video_info .video_detail .video_detail_commentcount {
}

.video_info .video_detail .video_detail_date {
}

